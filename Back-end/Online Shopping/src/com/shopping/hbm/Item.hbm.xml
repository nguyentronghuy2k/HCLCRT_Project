<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Item" table="item">
    <id name="id" type="long" column="id">
    	<generator class="assigned"></generator>
    </id>
    <property name="name" type="string" column="name"></property>
    <property name="price" type="long" column="price"></property>
    <property name="saled" type="int" column="saled"></property>
     <property name="describe" type="string" column="describe"></property>
      <property name="img" type="string" column="img"></property>
       <property name="releaseDate" type="date" column="releaseDate"></property>
        <property name="id_category" type="long" column="id_category"></property>
    <property name="id_producer" type="long" column="id_producer"></property>
    <property name="id_shop" type="long" column='"id_shop"'></property>
    
    </class>
    
</hibernate-mapping>